<!-- 
  Extensions to the base XHTML transform to emulate the 
  look and feel of the HTML directly-generated by Doxygen.
  
  Handles the doxygen-specific sectiondiv and related elements
  in order to produce an HTML result that emulates the 
  HTML produced directly by the doxygen tool.
  -->
<plugin id="org.dita-community.doxygen.html">
  <require plugin="org.dita.xhtml"/> 
  
  <feature extension="package.support.name" value="Eliot Kimber"/>
  <feature extension="package.support.email" value="ekimber@contrext.com"/>

  <feature extension="dita.xsl.xhtml" value="xsl/doxygen2html.xsl" type="file"/>

  <feature extension="dita.conductor.target.relative" value="build.xml" type="file"/>
  <feature extension="depend.preprocess.copy-files.pre" value="doxygen-copy"/>
      
</plugin>
